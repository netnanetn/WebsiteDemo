@model IEnumerable<Models.ViewModels.AllCategoriesModels>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Share.cshtml";
}
<table class="table" style="margin-left:20px">
    <thead>
        <tr>
            <th>  <h2 class="header__main"><span class="breadcrumb"><i class="fa fa-credit-card"></i> </span><span class="title">Danh mục sản phẩm</span></h2></th>
            <th>

                <a class="btn btn-default" href="javascript:void(0)" bind-event-click="showExportOrders()">Xuất danh sách danh mục</a>
                <a class="btn btn-primary" href="/Admin/AllCategories/create">Thêm mới</a>

            </th>

        </tr>
    </thead>

</table>

<table class="table table-hover" style="margin-left:60px">
    <tr>
        <th>
            <input id="Checkbox1" type="checkbox" />
        </th>
        <th style="width:50px";>

        </th>
        <th>
            <h4><b>Danh mục sản phẩm</b></h4>
        </th>
        <th>
            <h4><b>Mô tả sản phẩm</b></h4>
        </th>
     <th></th>
       
    </tr>
   
       
   
    @foreach (var item in Model)
    {
        <tr>
           @*<td>
               <input id="Checkbox1" type="checkbox" />
           </td>*@
            <td class="select">
                <input type="checkbox" value="313248" name="ids" bind-event-change="addOrRemoveBulkActionItem(313248,this)" id="bulk-action-313248" class="bulk-action-item">
            </td>
            <td>
                <img class="img-circle" src=@Html.DisplayFor(modelItem => item.Image) height="50px" width="50px">
            </td>
            <td>
                

            @*<a href="#">@Html.DisplayFor(modelItem => item.Name)</a>*@  
                @Html.ActionLink(item.Name, "Edit", new { id = item.Id }) 
               
            </td>
            <td>
                @Html.Raw(item.Description)
            </td>
         <td>
             @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
             @Html.ActionLink("Delete", "Delete", new { id = item.Id })
         </td>
         
        </tr>
    }

</table>
