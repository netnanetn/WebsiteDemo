@model IEnumerable<WebSiteBanHangNoiThat.Areas.Admin.Models.AllCategoriesModels>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Share.cshtml";
}
<table class="table" style="margin-left:20px">
    <thead>
        <tr>
            <th>  <h2 class="header__main"><span class="breadcrumb"><i class="fa fa-credit-card"></i> </span><span class="title">Danh sách đơn hàng</span></h2></th>
            <th>

                <a class="btn btn-default" href="javascript:void(0)" bind-event-click="showExportOrders()">Xuất danh sách đơn hàng</a>
                <a class="btn btn-primary" href="/admin/orders/create">Tạo đơn hàng</a>

            </th>

        </tr>
    </thead>

</table>

<table class="table table-hover" style="margin-left:60px">
    <tr>
        <th>
            <input id="Checkbox1" type="checkbox" />
        </th>
        <th style="width:50px";>

        </th>
        <th>
            <h4><b>Category</b></h4>
        </th>
        <th>
            <h4><b>Description</b></h4>
        </th>
     
       
    </tr>
   
       
   
    @foreach (var item in Model)
    {
        <tr>
           @*<td>
               <input id="Checkbox1" type="checkbox" />
           </td>*@
            <td class="select">
                <input type="checkbox" value="313248" name="ids" bind-event-change="addOrRemoveBulkActionItem(313248,this)" id="bulk-action-313248" class="bulk-action-item">
            </td>
            <td>
                <img class="img-circle" src=@Html.DisplayFor(modelItem => item.Image) height="50px" width="50px">
            </td>
            <td>
                

            <a href="#">@Html.DisplayFor(modelItem => item.Name)</a>   
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
         
         
        </tr>
    }

</table>
